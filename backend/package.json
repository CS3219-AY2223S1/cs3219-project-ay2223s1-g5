{
  "name": "backend",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "pre-commit": "lint-staged",
    "dev": "concurrently \"npm run --prefix ../shared dev\" \"nest start --watch --preserveWatchOutput | npm run pino-pretty\"",
    "dev:debug": "concurrently \"npm run --prefix ../shared dev\" \"nest start --watch --debug --preserveWatchOutput | npm run pino-pretty\"",
    "pino-pretty": "pino-pretty --hideObject -i pid,hostname -t SYS:standard -o '\u001b[33m[{req.id}]\u001b[0m \u001b[32m[{context}]\u001b[0m {msg}'",
    "prebuild": "rimraf build",
    "build": "nest build",
    "start": "nest start",
    "start:prod": "node build/main",
    "test:wait-for": "./wait-for localhost:5432 -- echo \"Database is ready for connections\" && sleep 3;",
    "test:full": "npm run test:setup && npm run test; npm run test:teardown",
    "test:setup": "docker compose -f docker-compose.test.yml up -d && npm run test:wait-for && npm run test:migrate",
    "test:migrate": "npx prisma migrate deploy --schema ../prisma/schema.prisma && npx prisma generate --schema ../prisma/schema.prisma",
    "test": "jest -i",
    "test:teardown": "docker compose -f docker-compose.test.yml down",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint --ext ts,tsx,js,jsx .",
    "lint:fix": "eslint --fix --ext ts,tsx,js,jsx .",
    "clean": "rm -rf node_modules && rm -rf build"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.0.11",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/websockets": "^9.0.11",
    "@socket.io/redis-adapter": "^7.2.0",
    "@types/connect-redis": "^0.0.18",
    "@types/express-session": "^1.17.5",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.3",
    "convict": "^6.2.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.2",
    "express-session": "^1.17.3",
    "nanoid": "^3.3.4",
    "nestjs-pino": "^3.1.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pino-http": "^8.2.0",
    "redis": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "4.5.1",
    "twilio": "^3.81.0",
    "y-socket.io": "^1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "28.1.2",
    "lint-staged": "^13.0.3",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.3.2",
    "socket.io-client": "^4.5.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "moduleNameMapper": {
      "~shared/(.*)": "<rootDir>/../../shared/src/$1",
      "src/(.*)": "<rootDir>/$1"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
